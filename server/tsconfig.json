{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": "./src",
      "noImplicitAny": false,
      "allowJs": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noEmitOnError": false
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
