{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@features/*": ["src/features/*"],
        "@shared/*": ["src/features/shared/*"]
      }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
